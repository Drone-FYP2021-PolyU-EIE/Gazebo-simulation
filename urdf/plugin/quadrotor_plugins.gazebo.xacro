<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="world_frame" default="world"/>
  <xacro:arg name="base_link_frame" default="base_link"/>

  <xacro:include filename="$(find drone)/urdf/plugin/quadrotor_sensors.gazebo.xacro" />
  <xacro:include filename="$(find drone)/urdf/plugin/quadrotor_controller.gazebo.xacro" />
  <xacro:include filename="$(find drone)/urdf/plugin/quadrotor_propulsion.gazebo.xacro" />
  <xacro:include filename="$(find drone)/urdf/plugin/quadrotor_aerodynamics.gazebo.xacro" />

  <!-- Quadrotor Gazebo Plugins -->
  <xacro:quadrotor_sensors />
  <xacro:quadrotor_controller />
  <xacro:quadrotor_propulsion />
  <xacro:quadrotor_aerodynamics />


</robot>
